# workspace assignment (use "xprop")
assign [class="^Icedove$"] $WS1
assign [class="^Iceweasel$"] $WS2
assign [class="^Skype$"] $WS5
assign [class="^Spotify$"] $WS8

# switch to previous workspace
bindsym $mod+Tab workspace back_and_forth

# switch between workspaces, on the same screen
bindsym Control+Mod1+Right workspace next_on_output
bindsym Control+Mod1+Left workspace prev_on_output

# switch to urgent workspace
bindsym $mod+x [urgent=latest] focus
#for_window [urgent=latest] exec notify-send -t 0 -u critical "Urgent event"
#for_window [urgent=latest] exec "i3-msg '[urgent=latest] focus' && notify-send -t 5 -u critical Focus_Urgent"
for_window [urgent=latest] exec i3-msg '[urgent=latest] focus'

# handling of floating dialogs
for_window [window_role="pop-up"] floating enable
for_window [window_role="task_dialog"] floating enable

# workspace screens
workspace 1 output DP-1
workspace 2 output DP-1
workspace 3 output DP-1
workspace 4 output DP-1
workspace 5 output DP-2
workspace 6 output DP-2
workspace 7 output DP-2
workspace 8 output DP-2
workspace 9 output LVDS-1
workspace 10 output LVDS-1

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

bindsym $mod+Shift+l exec "i3lock --color 000000 --dpms --ignore-empty-password"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.

        #bindsym j resize shrink width 10 px or 10 ppt
        #bindsym k resize grow height 10 px or 10 ppt
        #bindsym l resize shrink height 10 px or 10 ppt
        #bindsym semicolon resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Right resize grow width 5 px or 5 ppt
        bindsym Up resize grow height 5 px or 5 ppt
        bindsym Down resize shrink height 5 px or 5 ppt
        bindsym Left resize shrink width 5 px or 5 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status)
# Big screen + laptop
bar {
        output LVDS-1
        output DP-1
        position top
        status_command "i3status --config ~/.i3/status.conf"
        #status_command i3status --config ~/.i3/status.conf | xmobar -o -t "%StdinReader%" -c "[Run StdinReader]"
}

# Small screen
bar {
        output DP-2
        position top
        status_command "py3status -i .i3/ --config ~/.i3/status_small.conf"
        #status_command "i3status --config ~/.i3/status_small.conf"
}

